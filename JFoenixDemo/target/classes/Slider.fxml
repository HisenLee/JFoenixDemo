<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXSlider?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="50" maxWidth="450" maxHeight="600" alignment="CENTER">
        <children>
            <HBox spacing="100" alignment="CENTER">
                <children>
                    <JFXSlider orientation="VERTICAL" prefHeight="300" styleClass="jfx-slider-colored"></JFXSlider>

                    <JFXSlider orientation="VERTICAL" styleClass="jfx-slider-style"
                               maxHeight="200"> </JFXSlider>

                    <JFXSlider orientation="VERTICAL" prefHeight="200"
                               disable="true"> </JFXSlider>

                </children>
            </HBox>
            <JFXSlider prefWidth="400"></JFXSlider>

            <JFXSlider styleClass="jfx-slider-style" maxWidth="300"></JFXSlider>

            <JFXSlider prefWidth="400" disable="true"></JFXSlider>

        </children>
    </VBox>
</StackPane>
